<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/white"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView1Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_1"
        app:layout_constraintBottom_toTopOf="@id/padView4Button"
        app:layout_constraintEnd_toStartOf="@id/padView2Button"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView2Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_2"
        app:layout_constraintBottom_toTopOf="@id/padView5Button"
        app:layout_constraintEnd_toStartOf="@id/padView3Button"
        app:layout_constraintStart_toEndOf="@id/padView1Button"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView3Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_3"
        app:layout_constraintBottom_toTopOf="@id/padView6Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/padView2Button"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView4Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_4"
        app:layout_constraintBottom_toTopOf="@id/padView7Button"
        app:layout_constraintEnd_toStartOf="@id/padView5Button"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/padView1Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView5Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_5"
        app:layout_constraintBottom_toTopOf="@id/padView8Button"
        app:layout_constraintEnd_toStartOf="@id/padView6Button"
        app:layout_constraintStart_toEndOf="@id/padView4Button"
        app:layout_constraintTop_toBottomOf="@id/padView2Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView6Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_6"
        app:layout_constraintBottom_toTopOf="@id/padView9Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/padView5Button"
        app:layout_constraintTop_toBottomOf="@id/padView3Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView7Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_7"
        app:layout_constraintBottom_toTopOf="@id/padViewSeparatorButton"
        app:layout_constraintEnd_toStartOf="@id/padView8Button"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/padView4Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView8Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_8"
        app:layout_constraintBottom_toTopOf="@id/padView0Button"
        app:layout_constraintEnd_toStartOf="@id/padView9Button"
        app:layout_constraintStart_toEndOf="@id/padView7Button"
        app:layout_constraintTop_toBottomOf="@id/padView5Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView9Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_9"
        app:layout_constraintBottom_toTopOf="@id/padViewDeleteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/padView8Button"
        app:layout_constraintTop_toBottomOf="@id/padView6Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padViewSeparatorButton"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_period"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/padView0Button"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/padView7Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padView0Button"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialpad_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/padViewDeleteButton"
        app:layout_constraintStart_toEndOf="@id/padViewSeparatorButton"
        app:layout_constraintTop_toBottomOf="@id/padView8Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/padViewDeleteButton"
        style="@style/Button.DialPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/primary_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/padView0Button"
        app:layout_constraintTop_toBottomOf="@id/padView9Button" />

</merge>
