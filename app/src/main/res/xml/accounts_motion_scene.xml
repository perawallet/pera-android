<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/accountsFragmentTransition"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@id/accountsRecyclerView"
            app:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@id/toolbarLayout">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/secondaryPortfolioValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/nodeImageView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/notificationImageButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/notificationImageButton" />
        </Constraint>

        <Constraint
            android:id="@id/assetInboxAllAccountsButton"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_small"
                android:background="@drawable/bg_asset_inbox_oval"
                android:drawablePadding="6dp"
                android:paddingHorizontal="@dimen/spacing_xsmall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <ConstraintOverride
            android:id="@id/portfolioValueTitleTextView"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@id/primaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@id/secondaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@id/toolbarPrimaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
            <Transform
                android:scaleX="0"
                android:scaleY="0" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@id/toolbarSecondaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
            <Transform
                android:scaleX="0"
                android:scaleY="0" />
        </ConstraintOverride>

        <Constraint
            android:id="@id/loadingProgressBar"
            app:visibilityMode="ignore">
            <Layout
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/emptyScreenStateView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/accountsRecyclerView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingTop="@dimen/spacing_xxxsmall"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarLayout" />
        </Constraint>

        <ConstraintOverride
            android:id="@id/notificationImageButton"
            app:visibilityMode="ignore" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@id/toolbarLayout">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/notificationImageButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/nodeImageView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xsmall"
                app:layout_constraintBottom_toBottomOf="@id/notificationImageButton"
                app:layout_constraintEnd_toStartOf="@id/portfolioValueTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/notificationImageButton" />
        </Constraint>

        <Constraint
            android:id="@id/assetInboxAllAccountsButton"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_small"
                android:background="@drawable/bg_asset_inbox_rectangle"
                android:drawablePadding="6dp"
                android:paddingHorizontal="@dimen/spacing_xsmall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />
        </Constraint>

        <ConstraintOverride
            android:id="@id/portfolioValueTitleTextView"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
            <Transform
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@id/primaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
            <Transform
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@id/secondaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
            <Transform
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </ConstraintOverride>
        <ConstraintOverride
            android:id="@id/toolbarPrimaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </ConstraintOverride>

        <ConstraintOverride
            android:id="@id/toolbarSecondaryPortfolioValue"
            app:visibilityMode="ignore">
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </ConstraintOverride>

        <Constraint
            android:id="@id/loadingProgressBar"
            app:visibilityMode="ignore">
            <Layout
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/emptyScreenStateView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/accountsRecyclerView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingTop="@dimen/spacing_xxxsmall"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarLayout" />
        </Constraint>

        <ConstraintOverride
            android:id="@id/notificationImageButton"
            app:visibilityMode="ignore" />

    </ConstraintSet>

</MotionScene>
